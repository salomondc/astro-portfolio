<div class="flex flex-col gap-2 col-span-full">
  <textarea
    id="message"
    placeholder="Message"
    onkeyup="if (this.value) {document.querySelector('#send').removeAttribute('disabled')} else {document.querySelector('#send').setAttribute('disabled', true)}"
    class="border rounded-lg p-3 whitespace-pre-wrap min-h-16 bg-purple-50 hover:bg-[#F0EEFD]/50 hover:border-indigo-400 duration-500"
    rows="4"></textarea>

  <button
    id="send"
    onclick="location.href=`mailto:salomondc8@gmail.com?subject=${encodeURIComponent('Let\'s Talk')}&body=${encodeURIComponent(document.getElementById('message').value)}`"
    disabled
    class="rounded-full py-2 px-8 bg-indigo-400 font-bold text-slate-100 ml-auto hover:bg-indigo-500 focus-visible:ring-indigo-500 transition-[background-color] duration-300 active:bg-indigo-600 active:transition-none disabled:bg-indigo-200"
  >
    Send
  </button>
</div>

<script>
  const input = document.querySelector("#message") as HTMLTextAreaElement;
  const send = document.querySelector("#send") as HTMLButtonElement;
  send.addEventListener("click", () => {
    window.open(`mailto:salomondc8@gmail.com?body=${encodeURI(input.value)}`);
    send.setAttribute("disabled", "true");
    input.value = "";
  });
</script>
