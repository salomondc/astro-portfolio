---
import Svg from "../../lib/Svg.astro";

interface Props {
	icon: string;
	href: string;
	name: string;
	order: number;
}

const { icon, href, name, order } = Astro.props;
---

<a
	href={href}
	target="_blank"
	style={{ transitionDelay: `0.${order}s` }}
	class="flex items-center hover:bg-[#F0EEFD] gap-4 pl-4 py-2 pr-16 lg:bg-purple-50 lg:-translate-x-16 lg:group-focus-within:translate-x-0 transition-transform duration-500 lg:my-1 lg:shadow">
	<Svg name={icon} />{name}</a
>
